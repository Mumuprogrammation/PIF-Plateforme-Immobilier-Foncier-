generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  email        String   @unique
  phone        String
  password     String?
  favTerrainId String[]
  Offer        Offer[]
}

model Offer {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  content      String
  status       Boolean   @default(true)
  owner        User      @relation(fields: [userEmail], references: [email],onDelete: Cascade)
  authorGround Ground    @relation(fields: [groundID], references: [id])
  userEmail    String
  groundID     String    @db.ObjectId
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  receive      Receive[]
}

model Ground {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  area           String
  price          Float
  image          String
  locationGround Location   @relation(fields: [locationID], references: [id])
  locationID     String     @db.ObjectId
  Offer          Offer[]
  Category       Category[]
}

model Location {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  longitude     Float
  latitude      Float
  Ground        Ground[]
}

model Receive {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  authorMessage  Message @relation(fields: [messageID], references: [id])
  concernedOffer Offer?  @relation(fields: [offerID], references: [id])
  messageID      String  @db.ObjectId
  offerID        String  @db.ObjectId
}

model Message {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  messageContent String

  receive        Receive[]
}

model Category {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  categoryName    String
  concernedGround Ground @relation(fields: [groundID], references: [id])
  groundID        String @db.ObjectId
}
